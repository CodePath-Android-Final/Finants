<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="#EBF6FF">

  <Button
      android:id="@+id/login_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="10dp"
      android:layout_marginTop="8dp"
      android:text="Login"
      android:textSize="18dp"
      android:textStyle="bold"
      android:fontFamily="@font/marmelad"
      android:backgroundTint="#800000"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/et_Password" />

  <EditText
      android:id="@+id/et_UserName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="10dp"
      android:ems="13"
      android:hint="Username"
      android:inputType="textEmailAddress"
      android:fontFamily="@font/convergence"
      android:text=""
      android:textColor="@color/black"
      android:textColorHint="#AAAAAA"
      android:backgroundTint="#000000"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tvSlogan" />

  <EditText
      android:id="@+id/et_Password"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="10dp"
      android:layout_marginTop="8dp"
      android:ems="13"
      android:hint="Password"
      android:fontFamily="@font/convergence"
      android:textColor="@color/black"
      android:textColorHint="#AAAAAA"
      android:inputType="textPassword"
      android:text=""
      android:backgroundTint="#000000"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/et_UserName" />

  <Button
      android:id="@+id/signUpBtn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="5dp"
      android:layout_marginTop="140dp"
      android:text="Register"
      android:fontFamily="@font/marmelad"
      android:backgroundTint="#800000"
      android:textSize="18dp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/login_button" />

  <TextView
      android:id="@+id/tvSlogan"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Join Finants and celebrate \n your next savings goal"
      android:fontFamily="@font/rocksalt"
      android:textColor="@color/black"
      android:textSize="18dp"
      android:textAlignment="center"
      android:layout_marginTop="140dp"
      android:layout_marginLeft="50dp"
      android:layout_marginRight="50dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:textStyle="bold"/>

  <ImageView
      android:id="@+id/imageView"
      android:layout_width="wrap_content"
      android:layout_height="290dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:srcCompat="@drawable/ant_back" />
</androidx.constraintlayout.widget.ConstraintLayout>